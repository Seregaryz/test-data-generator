<idea-plugin>
    <id>com.github.seregaryz.testdatagenerator</id>
    <name>test-data-generator</name>
    <vendor email="seregaryz@gmail.com" url="http://www.yourcompany.com">KPFU.ITIS</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.seregaryz.testdatagenerator.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.seregaryz.testdatagenerator.services.MyProjectService"/>
        <notificationGroup id="Custom Notification Group"
                           displayType="BALLOON"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.seregaryz.testdatagenerator.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <action
                class="com.github.seregaryz.testdatagenerator.action.HelloWorldAction"
                id="SecondAction"
                text="_Second Action"
                description="A second action that shows a notification">
        </action>
        <group id="MyPlugin.TopMenu"
               text="_Request History"
               description="My plugin toolbar menu">
            <action
                    class="com.github.seregaryz.testdatagenerator.action.request_history.RequestHistoryAction"
                    id="AdminAction"
                    text="_Show History"
                    description="This action open plugin admin panel">
                <keyboard-shortcut first-keystroke="control alt u" keymap="$default"/>
            </action>
            <add-to-group group-id="MainMenu" anchor="last"/>
        </group>
        <group id="SecondGroup"
               text="_My Second Group"
               popup="true">
            <reference ref="SecondAction"/>
        </group>

        <action
                class="com.github.seregaryz.testdatagenerator.action.data_analyze.DataAnalyzeAction"
                id="AnalyzeAction"
                icon="SdkIcons.Sdk_default_icon"
                text="Analyze Data"
                description="Analyze package and generate test data">
            <add-to-group group-id="AnalyzeActions" anchor="first"/>
        </action>

    </actions>
</idea-plugin>
